<div class="row">
  <div class="col-md-12">
    <br />
    <h2>Students</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Student Num</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Status</th>
            <th>Course ID</th>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
            <tr>
              <td>{{this.studentNum}}</td>
              <td><a
                  href="/student/{{this.studentNum}}"
                >{{this.fullName}}</a></td>
              <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
              <td>{{this.address}}</td>
              <td>{{this.status}}</td>
              <td><a
                  href="/students?course={{this.courseID}}"
                >{{this.courseID}}</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{#unless students}}
      <p>{{message}}</p>
    {{/unless}}
  </div>
</div>
<div class="row">
  <div class="col-md-12 text-center">
    <strong>{{#unless students}}{{message}}{{/unless}}</strong>
  </div>
</div>